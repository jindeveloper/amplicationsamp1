datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Employee {
  birthDate  DateTime?
  createdAt  DateTime  @default(now())
  dateHired  DateTime?
  firstName  String?
  id         String    @id @default(cuid())
  lastName   String?
  middleName String?
  updatedAt  DateTime  @updatedAt
}
